{
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "tsc -b packages/disposables packages/scheduler packages/virtualtime-scheduler packages/react-scheduler packages/eventloop-scheduler packages/rx-core packages/rx-operators packages/rx-observables packages/rx-imperative packages/ix-core packages/state-container packages/dom packages/react-hooks packages/react-router packages/react-dom-router packages/perf packages/example",
    "clean": "rimraf packages/**/dist packages/**/tsconfig.tsbuildinfo",
    "example": "node ./packages/example/dist/index.js",
    "format": "prettier --write packages/**/src/** packages/**/test/**/*",
    "lint": "tslint -t codeFrame 'packages/**/src/**' 'packages/**/test/**/*'",
    "perf": "NODE_ENV=production node ./packages/perf/dist/index.js",
    "test": "lerna run test",
    "test-coverage": "lerna run test-coverage"
  },
  "devDependencies": {
    "lerna": "^3.18.4",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "typescript": "^3.7.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "prettier": {
    "bracketSpacing": true,
    "proseWrap": "never",
    "singleQuote": false,
    "trailingComma": "all"
  }
}
