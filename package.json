{
  "name": "reactive-js",
  "private": true,
  "scripts": {
    "build": "yarn lint && yarn format && yarn clean && yarn build-types && rollup -c rollup.config.js && yarn pkg && yarn docs",
    "build-types": "tsc -p tsconfig.build-types.json",
    "clean": "rm -rf ./build-types ./mod ./docs ./packages/core/README.md ./packages/core/*.js ./packages/core/**/*.js ./packages/core/*.ts ./packages/core/**/*.ts ./packages/core/*.mjs ./packages/core/**/*.mjs",
    "docs": "typedoc",
    "bootstrap": "lerna bootstrap",
    "deno-install": "curl -fsSL https://deno.land/x/install/install.sh | sh",
    "format": "prettier '**' --write",
    "lint": "eslint . --fix -f stylish --ext .ts,.tsx,.js,.jsx",
    "perf": "yarn bootstrap && lerna run build --scope @reactive-js/perf && lerna run perf --scope @reactive-js/perf",
    "pkg": "cp README.md ./packages/core",
    "release": "lerna publish --force-publish",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "test-debug": "node --inspect-brk ./node_modules/.bin/jest",
    "test-deno": "deno test -r ./scripts/testRunner.deno.ts",
    "test-prod": "NODE_ENV=production node ./node_modules/.bin/jest",
    "typecheck": "tsc -p tsconfig.typecheck.json"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.3",
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.42",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "@types/scheduler": "^0.16.2",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "coveralls": "^3.1.1",
    "csstype": "^3.1.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^28.1.1",
    "lerna": "^5.1.1",
    "prettier": "^2.6.2",
    "react": "^18.1.0",
    "rollup": "^2.75.6",
    "rollup-plugin-dts": "^4.2.2",
    "scheduler": "^0.22.0",
    "ts-jest": "^28.0.4",
    "typedoc": "^0.22.17",
    "typedoc-plugin-markdown": "^3.12.1",
    "typedoc-plugin-no-inherit": "^1.3.1",
    "typescript": "^4.7.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testRegex": "testRunner.jest.ts",
    "globals": {
      "ts-jest": {
        "tsconfig": "./tsconfig.base.json"
      }
    }
  },
  "workspaces": [
    "packages/*"
  ]
}
