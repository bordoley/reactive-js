{
  "name": "reactive-js",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "yarn compile && yarn mod && yarn pkg && yarn docs",
    "clean": "yarn clean-build && yarn clean-coverage && yarn clean-docs && yarn clean-mod && yarn clean-pkg",
    "clean-build": "rm -rf ./build",
    "clean-coverage": "rm -rf ./coverage",
    "clean-docs": "rm -rf ./docs",
    "clean-mod": "rm -rf ./mod",
    "clean-pkg": "rm -rf ./packages/core/README.md ./packages/core/*.js ./packages/core/*.ts ./packages/core/*.mjs ./packages/core/internal ./packages/core/experimental",
    "compile": "yarn compile-cjs && yarn compile-esm && yarn compile-types",
    "compile-cjs": "tsc -p tsconfig.cjs.json",
    "compile-esm": "tsc -p tsconfig.esm.json",
    "compile-types": "tsc -p tsconfig.types.json",
    "deno-install": "curl -fsSL https://deno.land/x/install/install.sh | sh",
    "docs": "node ./scripts/docs.mjs",
    "example": "yarn bootstrap && lerna run build --scope @reactive-js/example && node ./packages/example/build/cjs/example-server",
    "example-debug": "yarn bootstrap && lerna run build --scope @reactive-js/example && node --inspect-brk ./packages/example/build/cjs/example-server",
    "format": "prettier '**' --write",
    "lint": "eslint . --fix -f codeFrame --ext .ts,.tsx,.js,.jsx",
    "mod": "yarn clean-mod && yarn mod-esm && yarn mod-ts && yarn mod-rm-unsupported",
    "mod-esm": "yarn mod-esm-copy && yarn mod-esm-replace",
    "mod-esm-copy": "cp -r ./build/esm/ ./mod",
    "mod-esm-replace": "replace 'from \"(\\.[.\\-/\\w]+)\";' 'from \"$1.js\";' ./mod -r --include=\"*.js\"",
    "mod-ts": "yarn mod-ts-copy && yarn mod-ts-replace",
    "mod-ts-copy": "cp -r ./src/ ./mod",
    "mod-ts-replace": "replace 'from \"(\\.[.\\-/\\w]+)\";' 'from \"$1.ts\";' ./mod -r --include=\"*.ts\"",
    "mod-rm-unsupported": "rm -rf ./mod/experimental/testing.jest.* ./mod/experimental/node.* ./mod/experimental/internal/node ./mod/node.* ./mod/react.* ./mod/internal/node ./mod/perf",
    "pkg": "yarn clean-pkg && yarn pkg-mjs && yarn pkg-js && yarn pkg-types && yarn pkg-rm-unsupport && yarn pkg-cp-files",
    "pkg-js": "cp -r ./build/cjs/ ./packages/core",
    "pkg-mjs": "yarn pkg-mjs-copy && yarn pkg-mjs-rename && yarn pkg-mjs-replace",
    "pkg-mjs-copy": "cp -r ./build/esm/ ./packages/core",
    "pkg-mjs-rename": "renamer --find \".js\" --replace \".mjs\" \"./packages/core/**/*.js\"",
    "pkg-mjs-replace": "replace 'from \"(\\.[.\\-/\\w]+)\";' 'from \"$1.mjs\";' ./packages/core -r --include=\"*.mjs\"",
    "pkg-types": "cp -r ./build/types/ ./packages/core",
    "pkg-rm-unsupport": "rm -rf ./packages/core/*.test.* ./packages/core/experimental/*.test.* /packages/core/experimental/testing.deno.* ./packages/core/perf",
    "pkg-cp-files": "cp README.md ./packages/core",
    "perf": "yarn compile-cjs && NODE_ENV=production node ./build/cjs/perf/index.js",
    "release": "lerna publish --force-publish",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "test-debug": "node --inspect-brk ./node_modules/.bin/jest",
    "test-deno": "deno test -r ./scripts/testRunner.deno.ts"
  },
  "devDependencies": {
    "@types/benchmark": "^1.0.33",
    "@types/jest": "^25.2.3",
    "@types/node": "13.13.2",
    "@types/react": "^16.9.11",
    "@types/scheduler": "^0.16.1",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "benchmark": "^2.1.4",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "jest": "^24.9.0",
    "lerna": "^3.18.4",
    "prettier": "^1.19.1",
    "react": "^16.11.0",
    "renamer": "^2.0.0",
    "replace": "^1.2.0",
    "rxjs": "^6.5.3",
    "scheduler": "^0.17.0",
    "ts-jest": "^24.1.0",
    "typedoc": "0.17.0-3",
    "typedoc-plugin-markdown": "^2.2.11",
    "typedoc-plugin-no-inherit": "^1.1.10",
    "typescript": "^3.8.3",
    "wonka": "^4.0.13"
  },
  "jest": {
    "preset": "ts-jest",
    "testRegex": "testRunner.jest.ts",
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.esm.json"
      }
    }
  },
  "workspaces": [
    "packages/*"
  ]
}
