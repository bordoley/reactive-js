{
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "clean": "rimraf packages/**/dist packages/**/tsconfig.tsbuildinfo packages/**/coverage",
    "docs": "lerna run docs",
    "example": "node ./packages/example/dist/index.js",
    "example-debug": "node --inspect-brk ./packages/example/dist/index.js",
    "format": "prettier '**' --write",
    "lint": "eslint . --fix -f codeFrame --ext .ts,.tsx,.js,.jsx",
    "perf": "NODE_ENV=production node ./packages/perf/dist/index.js",
    "test": "lerna run test",
    "test-coverage": "lerna run test-coverage"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-eslint-plugin": "^2.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.0.4",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-sort-class-members": "^1.6.0",
    "lerna": "^3.18.4",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "typedoc": "^0.15.3",
    "typedoc-plugin-markdown": "^2.2.11",
    "typedoc-plugin-no-inherit": "^1.1.10",
    "typescript": "^3.8.3"
