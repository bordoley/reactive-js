{
  "name": "reactive-js",
  "private": true,
  "scripts": {
    "build": "yarn clean && yarn typecheck && rollup -c rollup.config.js && yarn pkg",
    "clean": "rm -rf ./build ./mod ./docs",
    "doc": "node ./scripts/docs.mjs",
    "bootstrap": "lerna bootstrap",
    "deno-install": "curl -fsSL https://deno.land/x/install/install.sh | sh",
    "example": "yarn bootstrap && lerna run build --scope @reactive-js/example && node ./packages/example/build/cjs/example-server",
    "example-debug": "yarn bootstrap && lerna run build --scope @reactive-js/example && node --inspect-brk ./packages/example/build/cjs/example-server",
    "format": "prettier '**' --write",
    "lint": "eslint . --fix -f codeFrame --ext .ts,.tsx,.js,.jsx",
    "perf": "yarn bootstrap && lerna run build --scope @reactive-js/perf && lerna run perf --scope @reactive-js/perf",
    "pkg": "yarn pkg-clean &&  cp README.md ./packages/core && cp -r ./mod/ ./packages/core ",
    "pkg-clean": "rm -rf ./packages/core/README.md ./packages/core/*.js ./packages/core/*.ts ./packages/core/*.mjs",
    "release": "lerna publish --force-publish",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "test-debug": "node --inspect-brk ./node_modules/.bin/jest",
    "test-deno": "deno test -r ./scripts/testRunner.deno.ts",
    "typecheck": "tsc -p tsconfig.compile.json"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^6.1.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.9",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/scheduler": "^0.16.1",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "coveralls": "^3.1.0",
    "csstype": "^3.0.5",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "prettier": "^2.2.0",
    "react": "^17.0.1",
    "rollup": "^2.33.3",
    "rollup-plugin-dts": "^2.0.0",
    "scheduler": "^0.20.1",
    "svelte": "^3.29.7",
    "ts-jest": "^26.4.4",
    "typedoc": "^0.19.2",
    "typedoc-plugin-markdown": "^3.0.11",
    "typedoc-plugin-no-inherit": "^1.2.0",
    "typescript": "^4.1.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testRegex": "testRunner.jest.ts",
    "globals": {
      "ts-jest": {
        "tsconfig": "./tsconfig.compile.json"
      }
    }
  },
  "workspaces": [
    "packages/*"
  ]
}
