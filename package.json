{
  "name": "reactive-js",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "yarn lint && yarn format && yarn typecheck && yarn test && yarn clean && yarn build-package && yarn docs && yarn build-mod",
    "build-package": "tsc -p tsconfig.build-package.json && cp README.md ./packages/core",
    "build-mod": "tsc -p tsconfig.build-mod.json && deno run --allow-read --allow-write -r build-mod.deno",
    "clean": "rm -rf ./mod ./docs ./packages/core/**/ ./packages/core/*.{js,mjs,ts,md}",
    "docs": "typedoc",
    "bootstrap": "lerna bootstrap",
    "deno-install": "curl -fsSL https://deno.land/x/install/install.sh | sh",
    "format": "prettier '**' --write",
    "lint": "eslint . --fix -f stylish --ext .ts,.tsx,.js,.jsx",
    "perf": "yarn bootstrap && lerna run build --scope @reactive-js/perf && lerna run perf --scope @reactive-js/perf",
    "release": "lerna publish --force-publish",
    "test": "jest --verbose",
    "test-coverage": "jest --coverage",
    "test-debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand",
    "test-deno": "deno test -r ./mod/__tests__/isomorphic.tests.js",
    "test-prod": "NODE_ENV=production node ./node_modules/.bin/jest",
    "typecheck": "tsc -p tsconfig.typecheck.json"
  },
  "devDependencies": {
    "@types/jest": "29.2.5",
    "@types/node": "18.11.18",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "@types/scheduler": "0.16.2",
    "@typescript-eslint/eslint-plugin": "5.48.0",
    "@typescript-eslint/parser": "5.48.0",
    "coveralls": "3.1.1",
    "csstype": "3.1.1",
    "eslint": "8.31.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-import-resolver-typescript": "3.5.3",
    "eslint-plugin-import": "2.26.0",
    "jest": "29.3.1",
    "lerna": "6.4.0",
    "prettier": "2.8.1",
    "react": "18.2.0",
    "scheduler": "0.23.0",
    "ts-jest": "29.0.3",
    "typedoc": "0.23.23",
    "typedoc-plugin-markdown": "3.14.0",
    "typedoc-plugin-no-inherit": "1.4.0",
    "typescript": "4.9.4"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "preset": "ts-jest",
    "testRegex": "tests.ts",
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "useESM": true,
          "tsconfig": "./tsconfig.base.json"
        }
      ]
    }
  },
  "workspaces": [
    "packages/*"
  ]
}
